@{
    ViewData["Title"] = "Monthly Claim";
}
@model Contract_Monthly_Claim_System2.Models.CreateClaim;

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f7f8fa;
        color: #333;
    }

    h1.display-4, h1 {
        font-weight: 700;
        margin-bottom: 20px;
        color: #2c3e50;
    }

    .table {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    th {
        background-color: #007bff;
        color: #fff;
        font-weight: 600;
    }

    td, th {
        padding: 16px;
        text-align: center;
    }

    .btn-primary, .btn-secondary, .btn-success, .btn-danger {
        padding: 12px 20px;
        font-size: 1rem;
        border-radius: 6px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    form label {
        font-size: 1.1rem;
        font-weight: 500;
    }

    form input {
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .progress {
        height: 25px;
    }

    .progress-bar {
        font-size: 1rem;
    }

    .text-center {
        margin-bottom: 30px;
    }

    /* Custom spacing for all views */
    .container {
        padding: 40px;
    }

    .mt-4, .btn {
        margin-top: 20px;
    }

</style>


<div class="container text-center">
    <h1 class="display-4">Submit Claim</h1>
</div>
<form asp-action="ClaimForm" asp-controller="Home" class="container">
    <label>Name</label>
    <input type="text" name="Name" class="form-control" asp-for="Name" placeholder="John"/>

    <label class="mt-4">Surname</label>
    <input type="text" name="Surname" class="form-control" asp-for="Surname" placeholder="Doe"/>

    <label class="mt-4">Hours</label>
    <input type="number" name="Hours" class="form-control" step="0.1" asp-for="Hours" placeholder="0.0"/>

    <label class="mt-4">Hourly Rate</label>
    <input type="number" name="rate" class="form-control" step="0.01" asp-for="Rate" placeholder="0.00"/>

    <label class="mt-4">Additional Notes</label>
    <input type="text" name="notes" class="form-control" asp-for="Notes" placeholder="Additional notes to support claim"/>

    <label class="mt-4">Documentation</label>
    <input type="file" name="Document" class="form-control" id="file" asp-for="DocumentFile" />

    <button type="submit" class="btn btn-primary mt-4">Submit</button>
</form>